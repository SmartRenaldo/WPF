<Window x:Class="_10_WindowExpander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_WindowExpander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Expander Header="Food List" FontSize="24" Foreground="DarkGreen" BorderThickness="1" 
                  BorderBrush="DarkCyan" Width="300" Height="200" IsExpanded="True" 
                  ExpandDirection="Right" VerticalAlignment="Top" HorizontalAlignment="Right">
            <StackPanel Orientation="Vertical">
                <CheckBox FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top">BEEF</CheckBox>
                <CheckBox FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top">LAMB</CheckBox>
                <CheckBox FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top">CHICKEN</CheckBox>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
