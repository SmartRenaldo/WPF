<Window x:Class="_19_ToolBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19_ToolBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar VerticalAlignment="Top" FontSize="28">
            <Label>Label</Label>
            <Button>Click me</Button>
            <Separator/>
            <TextBlock>Text Block</TextBlock>
            <TextBlock>Text Block2</TextBlock>
            <Image Source="../icon.png" Width="50"/>
        </ToolBar>
        <ToolBar VerticalAlignment="Top" FontSize="28" Margin="0, 60, 0, 0">
            <Label>Label</Label>
            <Button>Click me</Button>
            <Separator/>
            <TextBlock>Text Block</TextBlock>
            <TextBlock>Text Block2</TextBlock>
            <Image Source="../icon.png" Width="50"/>
        </ToolBar>
    </Grid>
</Window>
