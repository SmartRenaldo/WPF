<Window x:Class="_31_ImageBrush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_31_ImageBrush"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Background="Crimson" Width="200" Height="50" FontSize="32" TextAlignment="Center" FontWeight="Bold">
            <TextBlock.Foreground>
                <ImageBrush ImageSource="../cryptocurrency.png" TileMode="Tile" Viewport="0, 0, 20, 20" ViewportUnits="Absolute"></ImageBrush>
            </TextBlock.Foreground>
            TEXT
        </TextBlock>
    </Grid>
</Window>
