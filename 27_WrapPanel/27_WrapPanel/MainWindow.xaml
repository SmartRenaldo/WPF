<Window x:Class="_27_WrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27_WrapPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Width="600">
            <StackPanel Width="300" Height="60" Background="BlanchedAlmond"/>
            <StackPanel Width="300" Height="60" Background="BlanchedAlmond"/>
            <StackPanel Width="300" Height="60" Background="BlanchedAlmond"/>
            <StackPanel Width="300" Height="60" Background="BlanchedAlmond"/>
            <StackPanel Width="300" Height="60" Background="BlanchedAlmond"/>
            <Label FontSize="30">The WrapPanel control positions child elements in sequential position from left to right, breaking content to the next line at the edge of the containing box.</Label>
        </WrapPanel>
    </Grid>
</Window>
