<Window x:Class="_02_Button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Button"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="200" Height="100" HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" Content="Awesome Button" 
                Margin="10, 0, 0, 10" Background="BlueViolet" FontSize="20"
                FontWeight="DemiBold" BorderBrush="Bisque" 
                BorderThickness="5, 5, 0, 0" Click="Button_Click"
                MouseMove="Button_MouseMove"></Button>
    </Grid>
</Window>
